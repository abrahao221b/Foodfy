{% extends "layout.html" %}

    {% block stylesheet %}
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/page-home.css">
    {% endblock stylesheet %}
   


    {% block pages %}
    <a href="/page-description" target="_blank">About</a>
    <a href="/page-recipe" target="_blank">Recipes</a>
    {% endblock pages %}
           
    {% block content %}
    <div id="chef_img">
        <div>
            <h2>The Best Recipes</h2>
            <p> Learn to do the best recipes<br>
                with professional's recipes<br>
                of the world. 
            </p>
        </div>
        <img src="/assets/chef.png" alt="Chef">
    </div>
    {% endblock content %}
   
    {% block otherContent %}
    <section class="recipes_img"> 
        <h2>Best Recipes</h2>
        <div class="recipes">
            {% for item in items %}
                <div class="recipe" id="{{item.id}}">
                    <img src="{{item.imgLocation}}" alt="{{item.observation}}">
                    <h3>{{item.recipe}}</h3>
                    <p>{{item.chef}}</p>
                </div>
            {% endfor %}
        </div>
    </section>
    {% endblock otherContent %}


    {% block modalOverlay %}
    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">Close</a>
            <a class="modal-content">
                <img src="" alt="Image">
                <h3>Chicken wings with barbecue</h3>
                <p>By Vania Steroski</p>
            </a>
        </div>
    </div>
    {% endblock modalOverlay %}
    
    {% block script %}
    <script src="/scripts/recipe.js"></script>
    {% endblock script %}